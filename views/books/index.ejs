<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Books</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mea+Culpa&display=swap" rel="stylesheet">
    <style>
        body {
            background-image: url(https://img.rawpixel.com/s3fs-private/rawpixel_images/website_content/rm252batch2-ning-12.jpg?w=800&dpr=1&fit=default&crop=default&q=65&vib=3&con=3&usm=15&bg=F4F4F3&ixlib=js-2.2.1&s=a10d0b7b163122e929cf270c55a48a88);
        }

        .card {
            background-color: rgb(233, 165, 190);
        }

        .table {
            background-color: rgb(247, 243, 241);
        }

       .nav-header {
           display: inline;
           list-style: none;
       }

        .nav-text {
            font-size: 50px;
            font-family: 'Mea Culpa', cursive;
            text-align: center;
            display: inline;
            color: rgb(56, 43, 7);
        }
        .nav-pill-link {
            display: inline;
            float: right;
            padding: 10px;
            margin: 10px;
            background-color: white;
            border-radius: 10px;
        }
        .nav-pill-link > a {
            text-decoration: none;
            color: rgb(56, 43, 7);
            font-family: 'Courier New', Courier, monospace;
        }
        .nav-pill-link:hover {
            border: 2px pink solid;
            background-color: antiquewhite;
          font-size: 17px;
         
        }

        td {
            font-family: 'Mea Culpa', cursive;
            font-size: 30px;
        }

        th,
        .btn-success,
        .btn-danger {
            font-family: 'Courier New', Courier, monospace;
        }

        .btn-success,
        .btn-danger {
            background-color: rgb(56, 43, 7);
        }

        .btn-success:hover,
        .btn-danger:hover {
            background-color: lightpink;
        }
    </style>
</head>

<body class="container" style="margin-top: 60px;">

    <% if (messages.success) { %>
        <div class="alert alert-success" role="alert">
            <%- messages.success %>
        </div>
        <% } %>
            <% if (messages.error) { %>
                <div class="alert alert-danger" role="alert">
                    <%- messages.error %>
                </div>
                <% } %>

                    <div class="card">
                        <div class="card-header">
                            <ul class="nav-header">
                                <li class="nav-text">
                                    <a>Romantic Library List</a>
                                </li>
                                <li class="nav-pill-link">
                                    <a href="/books/add">Add Book</a>
                                </li>
                                <li class="nav-pill-link">
                                    <a  href="/">Main</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">

                            <% if(data.length) { %>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Author</th>
                                            <th width="200px">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(var i=0; i< data.length; i++) { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= (i+1) %>
                                                </th>
                                                <td>
                                                    <%= data[i].name%>
                                                </td>
                                                <td>
                                                    <%= data[i].author%>
                                                </td>
                                                <td>
                                                    <a class="btn btn-success edit"
                                                        href="../books/edit/<%=data[i].id%>">Edit</a>
                                                    <a class="btn btn-danger delete" onclick=" alert('Are You sure?')"
                                                        href="../books/delete/<%=data[i].id%>">Delete</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                                <% } %>

                                    <!-- if result is empty -->
                                    <% if(!data.length) { %>
                                        <p class="text-center">No book found!</p>
                                        <% } %>

                        </div>
                    </div>

</body>

</html>